<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>News Aggregator</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-900 text-white min-h-screen">
    <div class="container mx-auto py-8 flex flex-col items-center">

      <!-- Search Bar -->
      <form action="/search" method="GET" class="flex items-center mt-4">
        <input
          class="w-72 px-4 py-2 rounded-l-lg border border-gray-700 bg-gray-800 text-white focus:outline-none focus:border-purple-400"
          name="search"
          type="search"
          placeholder="Search news..."
        />
        <button
          class="px-4 py-2 bg-purple-600 text-white rounded-r-lg hover:bg-purple-700"
          type="submit"
        >Search</button>
      </form>

      <!-- Sort Button -->
      <form action="/sort-by-date" method="GET" class="mt-4">
        <button
          class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
          type="submit"
        >Sort by Date</button>
      </form>

      <!-- Specific Date Filter -->
      <form action="/news-by-date" method="GET" class="mt-4 flex flex-col items-center">
        <label for="specific-date" class="mb-2 text-gray-300">Select Date:</label>
        <input
          id="specific-date"
          class="w-64 px-4 py-2 rounded-lg border border-gray-700 bg-gray-800 text-white focus:outline-none focus:border-green-400"
          name="date"
          type="date"
        />
        <button
          class="mt-3 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700"
          type="submit"
        >Get News</button>
      </form>

      <h1 class="text-3xl font-bold my-6 text-purple-300">Latest News</h1>

      <!-- News Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 w-full px-4">
        <% if (news.length === 0) { %>
          <p class="text-gray-400 text-center w-full">No news found for this filter.</p>
        <% } %>

        <% news.forEach(article => { %>
          <div class="article border border-gray-700 p-4 bg-gray-800 rounded-xl shadow-lg hover:shadow-2xl transition duration-200">
            <h2 class="text-xl font-bold mb-2 text-purple-300"><%= article.title %></h2>
            <p class="text-gray-300 mb-2"><%= article.description || "No description available." %></p>
            <p class="text-gray-400 text-sm mb-2">Published: <%= article.publishedAt %></p>
            <a href="<%= article.url %>" target="_blank" class="text-blue-400 font-semibold hover:underline">Read more â†’</a>
          </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>